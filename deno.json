{
  "tasks": {
    "github": "deno run -RWEN=api.github.com src/github.ts"
  },
  "fmt": {
    "lineWidth": 100,
    "singleQuote": true,
    "useTabs": true
  },
  "lint": {
    "rules": {
      "exclude": [
        "no-cond-assign",
        "no-inner-declarations",
        "no-namespace",
        "no-unused-vars",
        "no-var",
        "prefer-const"
      ]
    }
  }
}
